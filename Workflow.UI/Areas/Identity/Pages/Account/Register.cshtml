@page
@model RegisterModel
@{
    ViewData["Title"] = "Register";
}

<h1 class="text-center mb-4">Créer un nouveau compte</h1>

<div class="row justify-content-center">
    <div class="col-md-10">
        <form id="registerForm" asp-route-returnUrl="@Model.ReturnUrl" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
            <div class="row">
                <!-- Colonne 1 -->
                <div class="col-md-6">
                    <div class="form-floating mb-3">
                        <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" placeholder="name@example.com" />
                        <label asp-for="Input.Email">Email</label>
                        <span asp-validation-for="Input.Email" class="text-danger"></span>
                    </div>
                    <div class="form-floating mb-3">
                        <input asp-for="Input.Password" class="form-control" autocomplete="new-password" aria-required="true" placeholder="password" />
                        <label asp-for="Input.Password">Mot de passe</label>
                        <span asp-validation-for="Input.Password" class="text-danger"></span>
                    </div>
                    <div class="form-floating mb-3">
                        <input asp-for="Input.ConfirmPassword" class="form-control" autocomplete="new-password" aria-required="true" placeholder="password" />
                        <label asp-for="Input.ConfirmPassword">Confirmation</label>
                        <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
                    </div>
                </div>

                <!-- Colonne 2 -->
                <div class="col-md-6">
                    <div class="form-floating mb-3">
                        <input asp-for="Input.Nom" class="form-control" placeholder="Nom" />
                        <label asp-for="Input.Nom">Nom</label>
                        <span asp-validation-for="Input.Nom" class="text-danger"></span>
                    </div>
                    <div class="form-floating mb-3">
                        <input asp-for="Input.Prenom" class="form-control" placeholder="Prénom" />
                        <label asp-for="Input.Prenom">Prénom</label>
                        <span asp-validation-for="Input.Prenom" class="text-danger"></span>
                    </div>
                    <div class="form-floating mb-3">
                        <select asp-for="Input.ServiceId" asp-items="Model.Services" class="form-select">
                            <option value="">-- Sélectionnez un service --</option>
                        </select>
                        <label asp-for="Input.ServiceId">Service</label>
                        <span asp-validation-for="Input.ServiceId" class="text-danger"></span>
                    </div>
                </div>
            </div>

            <!-- Bouton sous les deux colonnes -->
            <div class="text-center mt-3">
                <button id="registerSubmit" type="submit" class="btn btn-lg btn-primary px-5">Créer le compte</button>
            </div>
        </form>
    </div>
</div>