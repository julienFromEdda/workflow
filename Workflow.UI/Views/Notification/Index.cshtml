@model IEnumerable<Workflow.Domain.Entities.Notification>
@{
    ViewData["Title"] = "Mes notifications";
}

<h2>@ViewData["Title"]</h2>

@if (!Model.Any())
{
    <div class="alert alert-info">Aucune notification.</div>
}
else
{
    <ul class="list-group">
        @foreach (var notif in Model)
        {
            <li class="list-group-item d-flex justify-content-between align-items-center">
                <div>
                    @if (!notif.Lu)
                    {
                        <span class="badge bg-warning text-dark me-2">Nouvelle</span>
                    }
                    <a href="@notif.LienObjet">@notif.Message</a>
                </div>
                @if (!notif.Lu)
                {
                    <form asp-action="MarquerCommeLu" method="post">
                        <input type="hidden" name="id" value="@notif.Id" />
                        <button type="submit" class="btn btn-sm btn-outline-secondary">Marquer comme lu</button>
                    </form>
                }
            </li>
        }
    </ul>
}