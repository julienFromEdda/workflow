@using Workflow.Domain.Enums
@using Workflow.UI.Helpers
@model Workflow.Domain.Entities.Service
@{
    Layout = null;
    var formAction = ViewBag.FormAction ?? "Create";
    var submitLabel = ViewBag.SubmitLabel ?? "Valider";
}

<form asp-action="@formAction">
    @if (formAction == "Edit")
    {
        <input type="hidden" asp-for="Id" />
    }

    @if (!ViewContext.ViewData.ModelState.IsValid)
    {
        <div asp-validation-summary="All" class="alert alert-danger" role="alert"></div>
    }

    <div class="form-floating mb-3">
        <input asp-for="Nom" class="form-control @(ViewData.ModelState["Nom"]?.Errors.Count > 0 ? "is-invalid" : "")" />
        <label asp-for="Nom">Nom</label>
        <span asp-validation-for="Nom" class="invalid-feedback"></span>
    </div>

    <div class="modal-footer">
        <button type="submit" class="btn btn-primary">@submitLabel</button>
        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Annuler</button>
    </div>
</form>